<h1>New Task</h1>

<%= form_with model: @task do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :details %>
  <%= f.text_field :details %>
</div>

<div class="field">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
</div>

<div>
  <%= f.submit 'Create Task' %>
</div>
<% end %>
